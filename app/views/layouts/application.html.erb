<!DOCTYPE html>
<html>
  <head>
    <title>blister</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      WebFontConfig = {
        google: { families: [ 'Unica+One::latin' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
          '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();
    </script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js"
        type="text/javascript"></script>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">blister</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <a href="/tweets/new">
              <span class="fas fa-image fa-2x"></span>
            </a>
          </div>
        <% end %>
      </div>
    </header>
    <div class="side">
      <div class="serch">
        <%= form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form| %>
          <%= form.text_field :keyword, placeholder: "Type Keyword", class: "search-input" %>
        <% end %>
        <%= link_to new_user_registration_path, class: 'serch-btn' do %>
        <span class="fas fa-search"></span>
        <% end %>
      </div>
      <div class="sidebar">
        <% if user_signed_in? %>
          <div class="profile">
            <div class="profile-img">
            <a href="https://rentry.jp/note/wp-content/uploads/2018/10/smartphone_happy_tereru_man.png"
              data-lightbox="profile" data-title="プロフィール">
              <img src="https://rentry.jp/note/wp-content/uploads/2018/10/smartphone_happy_tereru_man.png">
            </div>
            <div class="profile-name">
              <%= link_to current_user.nickname, user_path(current_user), class: "profile-name__user" %>
            </div>
          </div>
          <div class="tag">
            <p>favorite</p>
            <%= link_to "#zorlac", "/" %>
            <%= link_to "#pushead", "/" %>
            <%= link_to "#buttstain", "/" %>
            <%= link_to "#life's a beach", "/" %>
            <%= link_to "#santacruz", "/" %>
            <%= link_to "#powell", "/" %>
            <%= link_to "#vans", "/" %>
            <%= link_to "#starwars", "/" %>
            <%= link_to "#toxic crusaders", "/" %>
            <%= link_to "#my pet monster", "/" %>
            <%= link_to "#killer tomato", "/" %>
            <%= link_to "#ojaga design", "/" %>
            <%= link_to "#virgo", "/" %>
            <%= link_to "#hex antistyle", "/" %>
          </div>
            <div class="icon-in">
              <div class="facebook">
                <%= link_to "https://www.facebook.com/" do %>
                <span class="fab fa-facebook-square"></span>
                <% end %>
              </div>
              <div class="instagram">
                <%= link_to "https://www.instagram.com/" do %>
                <span class="fab fa-instagram"></span>
                <% end %>
              </div>
              <div class="twitter">
                <%= link_to "https://twitter.com/" do %>
                <span class="fab fa-twitter-square"></span>
                <% end %>
              </div>
              <div class="sign-out">
                <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="fas fa-sign-out-alt"></span>
                <% end %>
              </div>
            </div>
        <% else %>
          <div class="icon-out">
            <div class="sign-in">
              <%= link_to "Sign In", new_user_session_path, class: 'post' %>
              <span class="fas fa-sign-in-alt fa-2x"></span>
            </div>
            <div class="sign-up">
              <%= link_to "Sign-up", new_user_registration_path, class: 'post' %>
              <span class="fas fa-user-plus fa-2x"></span>
            </div>
          </div>
          <div class="tag">
            <%= link_to "#zorlac", "/" %>
            <%= link_to "#pushead", "/" %>
            <%= link_to "#buttstain", "/" %>
            <%= link_to "#life's a beach", "/" %>
            <%= link_to "#santacruz", "/" %>
            <%= link_to "#powell", "/" %>
            <%= link_to "#vans", "/" %>
            <%= link_to "#starwars", "/" %>
            <%= link_to "#toxic crusaders", "/" %>
            <%= link_to "#my pet monster", "/" %>
            <%= link_to "#killer tomato", "/" %>
            <%= link_to "#ojaga design", "/" %>
            <%= link_to "#virgo", "/" %>
            <%= link_to "#hex antistyle", "/" %>
          </div>
        <% end %>


      </div>
      
    </div>

    <%= yield %>

    ø
  </body>
</html>